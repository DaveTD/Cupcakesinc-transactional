<% title "Orders" %>

<table>
  <tr>
    <th>ID</th>
    <th>Customer</th>
    <th>Order date</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
	    <td><%= link_to order.id, :controller => "order", :action => "view", :id => order %></td>
	    <td><%= link_to h(order.customer.name), :controller => "customer", :action => "view", :id => order.customer %></td>
      <td><%=h order.order_date %></td>
      <td><%= link_to "Show", order %></td>
      <td><%= link_to "Edit", :controller => "order", :action => "edit", :id => order %></td>
      <td><%= link_to "Destroy", order, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Order", :controller => "orders", :action => "new" %></p>
